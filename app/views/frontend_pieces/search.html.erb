<div class="list-sidebar">
  <div class="list-sidebar-content">
    <h1 class="list-header">Search results</h1>
    <h2 class="list-count"><%= pluralize @count, 'article' %></h2>
    <% if !@query.nil? %><%= paginate @pieces, :window => 1, :outer_window => 0 %><% end %>
  </div>
</div>
<div class="list-articles">
  <%= render 'frontend_pieces/article_list', articles: @articles %>
  <% if !@query.nil? %><%= paginate @pieces, :window => 2, :outer_window => 0 %><% end %>
</div>