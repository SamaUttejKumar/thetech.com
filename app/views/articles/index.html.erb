<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Section</th>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.piece.section.name %></td>
        <td>
          <p class="headline"><%= article.headline %></p>
          <% unless article.subhead.blank? %>
            <p class="subhead"><%= article.subhead %></p>
          <% end %>
          <p class="byline">By <%= article.authors_line %>
            <% unless article.bytitle.blank? %>
              â€” <%= article.bytitle %>
            <% end %>
          </p>
        </td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article), data: { no_turbolink: true } %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: 'btn btn-primary', data: { no_turbolink: true } %>
