<p id="notice"><%= notice %></p>

<div id="piece_container">

  <header>
    <h1><%= @article.title %></h1>

    <% unless @article.byline.blank? %>
      <p id="byline">By <%= @article.byline %></p>
    <% end %>

    <% unless @article.dateline.blank? %>
      <p id="dateline"><%= @article.dateline %></p>
    <% end %>
  </header>

  <%= @article.html.html_safe %>
</div>

<hr>

<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary', data: {no_turbolink: true} %>
<%= link_to 'Back', articles_path, class: 'btn btn-default' %>
