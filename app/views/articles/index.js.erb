<% if @page == 1 %>
  $('.articles-table tbody').html("<%=j render 'article_list_tbody', articles: @articles %>");
<% else %>
  $("<%=j render 'article_list_tbody', articles: @articles %>").insertBefore('[data-autoscroll-target]');

  <% if @autoscroll_target.present? %>
    $('[data-autoscroll-target]').data('autoscroll-target', "<%=j @autoscroll_target %>");
  <% else %>
    $('[data-autoscroll-target]').removeData('autoscroll-target');
  <% end %>
<% end %>