<% if @piece.meta(:article).authors.any? %><meta name="author" content="<%= @piece.meta(:article).authors_line %>"><% end %>
<meta name="description" content="<%= @piece.meta(:article).meta(:intro).lstrip %>">
<link rel="canonical" href="<%= root_url.chop + @piece.meta(:frontend_display_path) %>">

<% if @piece.meta(:thumbnail_picture).nil? %>
  <meta name="twitter:card" content="summary">
<% else %>
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:image:src" content="<%= @piece.meta(:thumbnail_picture).content.url %>">
<% end %>
<meta name="twitter:site" content="@thetech">
<meta name="twitter:title" content="<%= @piece.meta(:article).meta(:headline) + ' | The Tech' %>">
<meta name="twitter:description" content="<%= @piece.meta(:article).meta(:intro).lstrip %>">
<% if @piece.meta(:article).authors.any? %>
  <meta name="twitter:creator" content="<%= @piece.meta(:article).authors.first.twitter %>">
<% end %>

<meta property="fb:admins" content="1677870174">
<meta property="og:url" content="<%= root_url.chop + @piece.meta(:frontend_display_path) %>">
<meta property="og:type" content="article">
<% if @piece.meta(:thumbnail_picture).nil? %>
  <meta property="og:image" content="<%= url_to_asset('logo@2x.png', {type: :image}) %>">
<% else %>
  <meta property="og:image" content="<%= @piece.meta(:thumbnail_picture).content.url('large') %>">
<% end %>
<meta property="og:site_name" content="The Tech">
<meta property="og:title" content="<%= @piece.meta(:article).meta(:headline) + ' | The Tech' %>">
<meta property="og:description" content="<%= @piece.meta(:article).meta(:intro).lstrip %>">
<meta property="article:publisher" content="https://www.facebook.com/themittech">