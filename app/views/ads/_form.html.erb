<hr>

<%= form_for(@ad) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'A descriptive name for this online ad. ' %>
  </div>

  <div class="form-group">
    <%= f.label :link, "Link (optional)" %>
    <%= f.text_field :link, class: 'form-control', placeholder: 'An (optional) link for the ads. ' %>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-4">
      <div class="form-group">
        <%= f.label :start_date, "Start Date" %>
        <%= text_field_tag 'ad[start_date]', datepicker_string(@ad.start_date), class: 'form-control', placeholder: 'Start date, MM/DD/YYYY', data: {provide: 'datepicker'} %>
      </div>
    </div>

    <div class="col-sm-12 col-md-4">
      <div class="form-group">
        <%= f.label :end_date, "End Date" %>
        <%= text_field_tag 'ad[end_date]', datepicker_string(@ad.end_date), class: 'form-control', placeholder: 'End date, MM/DD/YYYY', data: {provide: 'datepicker'} %>
      </div>
    </div>

    <div class="col-sm-12 col-md-4">
      <div class="form-group">
        <%= f.label :content, "Content" %>
        <span class="btn btn-info btn-file form-control">
          Choose File <%= f.file_field :content %>
        </span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type, "Type" %>
    <%= f.select :position, Ad.positions.keys.map { |t|
          [Ad::POSITION_NAMES[t], t]
        }, {}, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
