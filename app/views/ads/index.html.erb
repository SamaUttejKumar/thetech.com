<div class="titleline">
  <h1>Online Ads</h1>

  <%= link_to new_ad_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Online Ad
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Start Date</th>
      <th>End date</th>
      <th>Active?</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <%= content_tag_for(:tr, @ads) do |ad| %>
      <td><%= Ad::POSITION_SHORT_NAMES[ad.position] %></td>
      <td><%= ad.name %></td>
      <td><%= ad.start_date.to_s %></td>
      <td><%= ad.end_date.to_s %></td>
      <td><%= ad.active? ? 'Yes' : 'No' %></td>
      <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
      <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>

    <% if @ads.empty? %>
      <tr><td colspan="6">There are currently no online ads. </td></tr>
    <% end %>
  </tbody>
</table>

