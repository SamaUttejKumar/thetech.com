<div class="page-header">
  <%= link_to ads_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_ad_path(@ad), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show ad</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @ad.name %></dd>

  <dt>Start date:</dt>
  <dd><%= @ad.start_date %></dd>

  <dt>End date:</dt>
  <dd><%= @ad.end_date %></dd>

  <dt>Type:</dt>
  <dd><%= @ad.position %></dd>

</dl>
