- likely_authors = (Author.recent_photographers.to_a + Author.new_authors.to_a).sort_by(&:name)

%table.images-table.table
  %thead
    %tr
      %th.center Status
      %th Image
      %th{colspan: 2}
      %th.center.image_thumbnail_header Thumbnail
    - if local_assigns[:allow_search]
      %tr
        %td{colspan: 6}
          = form_tag images_path, method: :get, remote: true do
            %input#keywords.form-control{:name => "q", :placeholder => "Filter by caption or attribution. ", :type => "text"}/
  %tbody
    - images.each do |i|
      = render i, mark_print_status: local_assigns[:mark_print_status], likely_authors: likely_authors
