<div class="page-header">
  <%= link_to authors_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_author_path(@author), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @author.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Email:</dt>
  <dd><%= @author.email %></dd>

  <dt>Bio:</dt>
  <dd><%= @author.bio %></dd>

</dl>

<h2>Articles by this author</h2>
<table class="table" id="articles_table">
  <thead>
    <tr>
      <th>Section</th>
      <th>Article</th>
      <th>Author(s)</th>
    </tr>
  </thead>

  <tbody>
    <% @author.articles.each do |article| %>
      <tr>
        <td><%= article.piece.section.name %></td>
        <td><%= article.headline %></td>
        <td><%= article.authors_line %></td>
      </tr>
    <% end %>
  </tbody>
</table>

