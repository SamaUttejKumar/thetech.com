%body
  %hr/
  = link_to 'Edit from this version', revert_article_draft_path(@article, @draft), class: 'btn btn-primary', data: {no_turbolink: true}
  / - if can? :update_web_status, @draft
  /   = form_for @draft do |f|
  /     = f.select :web_status, @web_status_options, {}, class: 'form-control', disabled: @version.web_published?
  /   %span.update-web-status-result{:id => "update_web_status_result_#{@version[:id]}"}
  / - if @version.web_published?
  /   = button_tag 'Published', class: 'btn btn-success', disabled: true
  / - if can? :mark_print_ready, @version
  /   - unless @version.print_ready?
  /     = form_tag mark_print_ready_article_article_version_path(@article, @version), id: 'print_ready_form' do
  /       = submit_tag 'Mark as ready for print', class: 'btn btn-success'
  = link_to 'Back', articles_path, class: 'btn btn-default', data: {no_turbolink: true}
  = link_to 'View All Versions', article_drafts_path(@article), class: 'btn btn-default', data: {no_turbolink: true}
  %hr/
  #piece_container
    %header
      %h1
        - if @draft.primary_tag.present?
          #{@draft.primary_tag}:
        = @draft.headline
      - if @draft.subhead.present?
        %p#subhead= @draft.subhead
      %p#authors By #{@draft.authors_string}
      - if @draft.bytitle.present?
        %p#byline= @draft.bytitle
      %p
        - for tag in @draft.tags
          %span.label.label-primary= tag
    .panel.panel-default
      .panel-heading
        Teaser blurb (only appears on homepage, search page, etc.)
      .panel-body
        = @draft.lede
    = @draft.rendered_html.html_safe
  %hr/
