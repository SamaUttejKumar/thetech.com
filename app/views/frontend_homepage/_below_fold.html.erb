<% Section.btf.each do |s| %>
  <div class="btf-section">
    <div class="btf-section-head">
      <%= section_link s.pieces.first %>
    </div>
    <% i = 0 %>
    <% s.pieces.with_published_article.each do |p| %>
      <% if !@homepage.fold_pieces.include?(p.id) && !p.article.lede.blank? %>
        <% if p.images.any? %>
          <div class="btf-article btf-article-img">
            <a href="<%= p.frontend_display_path %>"><img src="<%= p.images.first.pictures.first.content.url(:square) %>"></a>
            <h1 class="headline"><a href="<%= p.frontend_display_path %>"><%= p.article.headline %></a></h1>
            <span class="article-meta"><%= p.article.updated_at.strftime('%b. %-d, %Y') %></span>
          </div>
        <% else %>
          <div class="btf-article btf-article-noimg">
            <h1 class="headline"><a href="<%= p.frontend_display_path %>"><%= p.article.headline %></a></h1>
            <span class="article-meta"><%= p.article.updated_at.strftime('%b. %-d, %Y') %></span>
            <p class="lede"><%= p.article.lede %></p>
          </div>
        <% end %>
        <% break if i == 5 %>
        <% i += 1 %>
      <% end %>
    <% end %>
  </div>
<% end %>