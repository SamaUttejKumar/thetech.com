<header class="nameplate">
  <%= image_tag 'nameplate-logo.png', alt: 'The Tech', class: 'nameplate-logo' %>
  <nav class="nameplate-nav">
    <%= form_tag '/search', method: :get, name: 'search' do %>
      <a href=""><i class="fa fa-search fa-lg"></i></a>
      <input type="text" name="query" value="" placeholder="Search here">
    <% end %>
    <div class="nameplate-top">
      <h1>The Tech</h1>
      <ul>
        <li><%= Date.today.strftime('%B %-d, %Y') %></li>
        <% Issue.all.each do |i| %>
          <% unless i.pdf_updated_at.nil? %>
            <li><a href="<%= i.pdf.url %>">This Week's Issue<%= icon('newspaper-o', '', class: 'fa-fw') %></a></li>
            <% break %>
          <% end %>
        <% end %>
        </li>
        <li><%= Weather.temperature_f + 'Â°F' %> <%= wi_icon(wicon_name(Weather.icon, Weather.sun_set_time)) %></li>
      </ul>
    </div>
    <div class="nameplate-bottom">
      <ul>
        <li><a href="/news">News</a></li>
        <li><a href="/opinion">Opinion</a></li>
        <li><a href="/arts">Arts</a></li>
        <li><a href="/sports">Sports</a></li>
        <li><a href="/campus-life">Campus Life</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Advertising</a></li>
        <li><a href="#">Contact Us</a></li>
      </ul>
    </div>
  </nav>
</header>