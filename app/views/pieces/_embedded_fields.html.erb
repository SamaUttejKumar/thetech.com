<div id="pieces_embedded_fields">
  <div class="form-group">
    <%= label_tag :issue_id, 'Issue' %>
    <%= select_tag :issue_id, options_from_collection_for_select(Issue.all, :id, :name, object.piece.try(:issue_id)), {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= label_tag :section_id, 'Section' %>
    <%= select_tag :section_id, options_from_collection_for_select(Section.all, :id, :name, object.piece.try(:section_id)), {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= label_tag :tag_list, 'Tags' %>
    <%= text_field_tag :tag_list, object.piece.try(:comma_separated_tag_list), class: 'form-control', data: {role: 'tagsinput'} %>
  </div>

  <div class="checkbox">
    <%= label_tag :syndicated do %>
      <%= check_box_tag :syndicated, 'true', object.piece.try(:syndicated?) %>
      This is a syndicated piece.
    <% end %>
  </div>
</div>