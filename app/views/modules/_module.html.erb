<div class="module module-col-<%= cols %> module-<%= submodules.length == 1 ? 'single' : 'multi' %>"<%= @homepage_editing ? ' data-uuid=' +  uuid : '' %>>
  <% submodules.each do |m| %>
    <%= render 'modules/submodule', m: m, multi: true %>
  <% end %>
  <% if @homepage_editing %>
    <%= render 'modules/new_submodule_toolbar', module_uuid: uuid %>
  <% end %>
</div>