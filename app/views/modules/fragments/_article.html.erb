<%= if piece.meta(:primary_tag).nil? then section_link piece else primary_tag_link piece end %>
<% article_version = piece.meta(:article).latest_published_version %>
<% article = Article.new %>
<% article.assign_attributes(article_version.article_attributes) %>
<h1 class="headline"<%=raw @homepage_editing ? ' data-editable="headline"' : '' %>><a href="<%= piece.frontend_display_path %>"><%= article.meta(:headline) %></a></h1>
<h4 class="article-meta">
  <% if piece.article.meta(:authors).any? %>
  	<span class="byline">By <%= linked_authors_line piece.article.authors %></a></span>
  <% elsif piece.article.meta(:attribution) != nil && piece.article.meta(:attribution) != "" && !piece.article.meta(:attribution).match(/unknown/i)%>
    <span class="byline">By <%= piece.article.meta(:attribution) %></span>
  <% end %>
  <span class="timestamp"><%= piece.article.meta(:published_at).strftime('%b. %-d, %Y') %></span>

</h4>
<p class="lede"<%=raw @homepage_editing ? ' data-editable="lede"' : '' %>><%= article.meta(:lede) %></p>
